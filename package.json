	"name": "earthrock",
	"version": "1.0.0",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-json": "^4.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@rollup/plugin-sucrase": "^3.0.0",
		"ava": "^3.6.0",
		"color-js": "^1.0.5",
		"cross-env": "^7.0.2",
		"cuid": "^2.1.8",
		"expr-eval": "^2.0.2",
		"file-saver": "^2.0.2",
		"npm": "^6.14.4",
		"npm-run-all": "^4.1.5",
		"piexifjs": "^1.0.6",
		"prettier-plugin-svelte": "^0.7.0",
		"pug": "^3.0.1",
		"raf": "^3.4.1",
		"replace-in-file": "^5.0.2",
		"rollup": "^1.32.1",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-glsl": "^1.3.0",
		"rollup-plugin-glslify": "^1.2.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-notify": "^1.1.0",
		"rollup-plugin-root-import": "^0.2.4",
		"rollup-plugin-svelte": "^5.2.1",
		"rollup-plugin-terser": "^5.3.0",
		"rollup-plugin-visualizer": "^2.7.2",
		"run-script-os": "^1.1.1",
		"scribbletune": "^3.5.3",
		"stylus": "^0.54.7",
		"svelte": "^3.20.1",
		"svelte-preprocess": "^3.7.1",
		"symlink-dir": "^3.1.2",
		"tone": "^13.8.25",
		"twgl.js": "^4.14.2",
		"typescript": "^3.8.3"
	},
	"ava": {
		"files": [
			"src/test/bundle.test.js"
		],
		"snapshotDir": "./src/test"
	},
	"scripts": {
		"link": "symlink-dir ./src ./node_modules/src",
		"pre:build": "link",
		"build": "run-p build:external build:goblin build:client build:test",
		"build:external": "rollup -c ./src/_external.config.js",
		"build:goblin": "rollup -c ./src/_goblin.config.js",
		"build:physics": "rollup -c ./src/_physics.config.js",
		"build:client": "rollup -c ./src/_client.config.js",
		"build:test": "rollup -c ./src/_test.config.js",
		"pre:auto": "link",
		"auto": "run-p link auto:goblin auto:client auto:external auto:test",
		"auto:external": "cross-env TARGET=\"browser\" rollup -w -c ./src/_external.config.js",
		"auto:goblin": "rollup -w -c ./src/_goblin.config.js",
		"auto:physics": "rollup -w -c ./src/_physics.config.js",
		"auto:client": "rollup -w -c ./src/_client.config.js",
		"auto:test": "rollup -w -c ./src/_test.config.js",
		"pre:dev": "link",
		"dev": "run-p auto start",
		"pre:test": "link",
		"test": "ava",
		"test:debug": "ava debug --verbose",
		"start": "run-script-os",
		"start:windows": ".\\bin\\bifrost.exe",
		"start:macos": "bin/bifrost",
		"start:default": "echo 'No platform found'"
	}
}
