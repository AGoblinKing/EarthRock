
{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"env": {
		"browser": true
	},
	"parser": "@typescript-eslint/parser",
	"globals": {
	  "Wheel": "readonly"
	},
	"plugins": [
		"@typescript-eslint",
		"svelte3"
	],
	"overrides": [{
		"files": [ "**/*.svelte" ],
		"processor": "svelte3/svelte3"
	}],

	"rules": {
		"semi": [2, "never"],
		"indent": ["error", "tab"],
		"quotes": ["error", "backtick"],
		"camelcase": ["error", "never"],
		"@typescript-eslint/camelcase": ["error", "never"],
		"prefer-const": ["warn"]
	}
}